{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react",
    "module": "ES2022", 
    "moduleResolution": "node",
    "skipLibCheck": true,       
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true
