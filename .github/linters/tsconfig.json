  "exclude": ["../../node_modules/*", "../../__tests__/*", "**/*.d.ts", "**/app.d.ts", "**/react-app-env.d.ts", "**/declarations.d.ts", "../../**/Browse.tsx", "../../**/Home.tsx"],
  "include": ["../../**/*.tsx", "../../**/*.ts"]
}